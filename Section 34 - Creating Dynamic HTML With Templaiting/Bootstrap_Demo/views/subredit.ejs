    <%- include('partials/header') %>
    <%- include('partials/navbar') %>
    
    <div class="container">
        <h1>Browsing the <%= name.toUpperCase() %> subredit</h1>
        <p>
            <%= description %>
        </p>
        <hr>
        <% for (post of posts){ %>
            <article>
                <p>
                    <%= post.title %> - <b>post.author</b>
                </p>
                <% if (post.img){ %>
                    <img src="<%= post.img %>" alt="">
                    <% } %>
            </article>
            <% } %>
    </div>

    <%- include('partials/footer') %>
